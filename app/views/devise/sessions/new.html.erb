<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="sign-in-page">
      <h2 class="text-center">Welcome Back!</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <h4 class="text-center"><%= link_to "Sign up for an account", new_user_registration_path %></h4>
    </div>
  </div>
</div>